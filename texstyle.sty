\usepackage{amsmath}
\usepackage{amssymb}

%
% Override \title
%
% #def \settitlepos{pos}
%
\let\originaltitle\title
\newcommand{\settitlepos}[1]{%
    \renewcommand{\title}[1]{%
        \originaltitle{\vspace{#1}{##1}}%
    }%
}
\settitlepos{-4cm}

%
% Define well-known sets
%
% #def \N
% #def \Z
% #def \Q
% #def \R
% #def \C
% #def \K
% #def \M
%
\newcommand{\N}{\mathbb{N}}
\newcommand{\Z}{\mathbb{Z}}
\newcommand{\Q}{\mathbb{Q}}
\newcommand{\R}{\mathbb{R}}
\newcommand{\C}{\mathbb{C}}
\newcommand{\K}{\mathbb{K}}
\newcommand{\M}{\mathcal{M}}

%
% Define \qed
%
% #def \qedspace{space}
% #def \qed
% #def \setqedspace{space}
%
\newcommand{\qedspace}[1]{%
    \hspace{#1}$\blacksquare$
}
\newcommand{\qed}{\qedspace{2mm}}
\newcommand{\setqedspace}[1]{%
    \renewcommand{\qed}{\qedspace{##1}}%
}

%
% Define \st
%
% #def \stspace{space}
% #def \st
% #def \setstspace{space}
%
\newcommand{\stspace}[1]{\hspace{#1}\text{s.t.}\hspace{#1}}
\newcommand{\st}{\stspace{2mm}}
\newcommand{\setstspace}[1]{%
    \renewcommand{\st}{\stspace{##1}}%
}

%
% Define \pd
%
% #def \pd
%
\newcommand{\pd}[2]{\ensuremath{\frac{\partial #1}{\partial #2}}}
